<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lab_project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lab_project.styles.css" asp-append-version="true" />
    <style>
        /* Custom styles for a more decent-looking navbar */
        .navbar-custom {
            background: linear-gradient(to right, #6a11cb, #2575fc); /* gradient background */
            padding: 1rem 2rem; /* increased padding for more space */
        }
        .navbar-brand {
            font-size: 1.5rem; /* larger brand size */
            color: white;
        }
        .navbar-nav .nav-link {
            color: white;
            padding: 0.5rem 1rem;
        }
        .navbar-nav .nav-link:hover {
            background-color: rgba(255, 255, 255, 0.2); /* hover effect */
            border-radius: 5px; /* rounded hover effect */
        }
        .form-control {
            border-radius: 50px; /* round search box */
        }
        .btn-outline-success {
            border-radius: 50px; /* round button */
            color: white;
            border-color: white;
        }
        .btn-outline-success:hover {
            background-color: white;
            color: #6a11cb; /* button color on hover */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <a class="navbar-brand" href="#">Lab Project</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login">Login</a>
                    </li>

                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - lab_project - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
